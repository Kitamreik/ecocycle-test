<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calendar</title>
    <script src="/js/calendar.js" defer></script>
    <style>
        .calendar {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 10px;
            max-width: 800px;
            margin: 0 auto;
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .calendar-header {
            grid-column: span 7;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 24px;
            margin-bottom: 10px;
            color: #333;
        }

        .calendar-header h2 {
            margin: 0;
        }

        .prev-year, .next-year {
            cursor: pointer;
            font-size: 18px;
            color: #007BFF;
        }

        .day-name {
            text-align: center;
            font-weight: bold;
            color: red;
            background-color: #f0f0f0;
            padding: 5px;
            border-radius: 5px;
        }

        .calendar-day {
            border: 1px solid #ddd;
            padding: 10px;
            min-height: 100px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            background-color: #fff;
            border-radius: 5px;
        }

        .calendar-day div:first-child {
            font-size: 18px;
            font-weight: bold;
            color: #333;
        }

        .event {
            background-color: #e6f3ff;
            margin-top: 5px;
            padding: 5px;
            font-size: 12px;
            border-radius: 5px;
        }

        .hidden {
            visibility: hidden;
        }
    </style>
</head>
<body>
<div class="calendar">
    <div class="calendar-header">
        <button class="nav-button" onclick="changeMonth(-1)">← Previous Month</button>
        <h2><%= monthName %> <%= currentYear %></h2>
        <button class="nav-button" onclick="changeMonth(1)">Next Month →</button>
    </div>
    <% ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'].forEach(day => { %>
        <div class="day-name"><%= day %></div>
    <% }); %>
    <% calendar.forEach(day => { %>
        <div class="calendar-day <%= day.day ? '' : 'hidden' %>">
            <% if (day.day) { %>
                <div><%= day.day %></div>
                <% day.events.forEach(event => { %>
                    <div class="event"><%= event.title %></div>
                <% }); %>
            <% } %>
        </div>
    <% }); %>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        let currentMonth = <%= typeof currentMonth !== 'undefined' ? currentMonth : 'new Date().getMonth()' %>;
        let currentYear = <%= typeof currentYear !== 'undefined' ? currentYear : 'new Date().getFullYear()' %>;
        initCalendar(currentMonth, currentYear);
    });
</script>
</body>
</html>