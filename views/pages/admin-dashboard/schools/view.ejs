<body>
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }
    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }
    th {
        background-color: #f2f2f2;
    }
</style>

<h1>Schools Dashboard</h1>
<% if (typeof error !== 'undefined') { %>
    <p style="color: red;"><%= error %></p>
<% } %>
<% if (schools && schools.length > 0) { %>
    <table>
        <thead>
        <tr>
            <th>School ID</th>
            <th>Name</th>
            <th>Street Address</th>
            <th>City</th> <!-- Changed from City ID to City Name -->
            <th>District</th> <!-- Changed from District ID to District Name -->
            <th>GSS Status</th>
            <th>Title I Status</th>
            <th>Language</th> <!-- Changed from Language ID to Language Name -->
            <th>Created At</th>
            <th>Updated At</th>
        </tr>
        </thead>
        <tbody>
        <% schools.forEach(school => { %>
            <tr>
                <td><%= school.sid %></td>
                <td><%= school.sname %></td>
                <td><%= school.sstreetaddress %></td>
                <td><%= school.cityName %></td> <!-- Use city name -->
                <td><%= school.districtName %></td> <!-- Use district name -->
                <td><%= school.sgss ? 'Yes' : 'No' %></td>
                <td><%= school.stitle1 ? 'Yes' : 'No' %></td>
                <td><%= school.languageName %></td> <!-- Use language name -->
                <td><%= school.created_at %></td>
                <td><%= school.updated_at %></td>
            </tr>
        <% }); %>
        </tbody>
    </table>
<% } else { %>
    <p>No schools data available.</p>
<% } %>
