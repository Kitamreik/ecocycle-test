<link rel="stylesheet" href="/css/users/edit.css">
<body>
<div class="edit-user-form">
    <div class="euf-container">
        <div class="euf-header">
            <h1>User Management</h1>
        </div>

        <nav>
            <ol class="euf-breadcrumb">
                <li class="euf-breadcrumb-item"><a href="/admin/users">Users</a></li>
                <li class="euf-breadcrumb-item">Edit User</li>
            </ol>
        </nav>

        <div class="euf-user-id">
            <strong>User ID:</strong> <span id="eufUserId"><%= user.userid %></span>
        </div>

        <form action="/admin/users/edit/<%= user.userid %>?_method=PUT" method="POST" id="eufEditUserForm">
            <div class="euf-form-group">
                <label class="euf-label" for="eufUsername">Username</label>
                <input
                        type="text"
                        id="eufUsername"
                        name="username"
                        class="euf-input"
                        value="<%= user.username %>"
                        required
                        maxlength="50"
                >
            </div>

            <div class="euf-form-group">
                <label class="euf-label" for="eufEmail">Email</label>
                <input
                        type="email"
                        id="eufEmail"
                        name="useremail"
                        class="euf-input"
                        value="<%= user.useremail %>"
                        required
                        maxlength="50"
                        pattern="[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,6}"
                >
            </div>

            <div class="euf-form-group">
                <label class="euf-label" for="eufPhone">Phone Number</label>
                <input
                        type="tel"
                        id="eufPhone"
                        name="userphone"
                        class="euf-input"
                        value="<%= user.userphone %>"
                        pattern="[0-9]{10}"
                        maxlength="10"
                        placeholder="1234567890"
                >
            </div>

            <div class="euf-form-group">
                <label class="euf-label" for="eufStatus">Status</label>
                <select id="eufStatus" name="isactive" class="euf-select">
                    <option value="true" <%= user.isactive ? 'selected' : '' %>>Active</option>
                    <option value="false" <%= !user.isactive ? 'selected' : '' %>>Inactive</option>
                </select>
            </div>

            <div class="euf-form-group">
                <button type="submit" class="euf-submit-btn">
                    <i class="fas fa-save"></i> Update User
                </button>
            </div>
        </form>
    </div>
</div>
</body>