<link rel="stylesheet" href="/css/users/add.css">
<body>
<div class="add-user-form">
    <div class="auf-container">
        <div class="auf-header">
            <h1>User Management</h1>
        </div>

        <nav>
            <ol class="auf-breadcrumb">
                <li class="auf-breadcrumb-item"><a href="/admin/users">Users</a></li>
                <li class="auf-breadcrumb-item">New User</li>
            </ol>
        </nav>

        <div class="auf-user-id">
            <strong>User ID:</strong> <span id="aufUserId">Auto-generated</span>
        </div>

        <form method="POST" id="aufAddUserForm">
            <div class="auf-form-group">
                <label class="auf-label" for="aufUsername">Username</label>
                <input
                        type="text"
                        id="aufUsername"
                        name="username"
                        class="auf-input"
                        required
                        maxlength="50"
                        placeholder="Enter username"
                >
            </div>

            <div class="auf-form-group">
                <label class="auf-label" for="aufEmail">Email</label>
                <input
                        type="email"
                        id="aufEmail"
                        name="useremail"
                        class="auf-input"
                        required
                        maxlength="50"
                        pattern="[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,6}"
                        placeholder="example@domain.com"
                >
            </div>

            <div class="auf-form-group">
                <label class="auf-label" for="aufPhone">Phone Number</label>
                <input
                        type="tel"
                        id="aufPhone"
                        name="userphone"
                        class="auf-input"
                        pattern="[0-9]{10}"
                        maxlength="10"
                        placeholder="1234567890"
                >
            </div>

            <div class="auf-form-group">
                <label class="auf-label" for="aufStatus">Status</label>
                <select id="aufStatus" name="isactive" class="auf-select">
                    <option value="true" selected>Active</option>
                    <option value="false">Inactive</option>
                </select>
            </div>

            <div class="auf-form-group">
                <button type="submit" class="auf-submit-btn">
                    <i class="fas fa-plus-circle"></i> Add User
                </button>
            </div>
        </form>
    </div>
</div>
</body>