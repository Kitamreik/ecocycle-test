<body>
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }
    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }
    th {
        background-color: #f2f2f2;
    }
</style>

<h1>Requests Dashboard</h1>
<% if (typeof error !== 'undefined') { %>
    <p style="color: red;"><%= error %></p>
<% } %>
<% if (requests && requests.length > 0) { %>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>School Name</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Best Times to Contact</th>
            <th>Status</th>
            <th>Communication</th>
            <th>Notes</th>
        </tr>
        </thead>
        <tbody>
        <% requests.forEach(request => { %>
            <tr>
                <td><%= request.rid %></td>
                <td><%= request.rsid ? request.rsid.sname : 'N/A' %></td> <!-- School name -->
                <td><%= request.rcontactname %></td>
                <td><%= request.rcontactemail %></td>
                <td><%= request.rcontactphone %></td>
                <td><%= request.rcontactbesttimes %></td>
                <td><%= request.rstatusid ? request.rstatusid.requeststatusname : 'N/A' %></td> <!-- Status name -->
                <td><%= request.rcommunication %></td>
                <td><%= request.rnotes %></td>
            </tr>
        <% }); %>
        </tbody>
    </table>
<% } else { %>
    <p>No requests data available.</p>
<% } %>
</body>
