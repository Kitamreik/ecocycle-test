<body>
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }
    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }
    th {
        background-color: #f2f2f2;
    }
</style>

<h1>Funding Dashboard</h1>
<% if (typeof error !== 'undefined') { %>
    <p style="color: red;"><%= error %></p>
<% } %>
<% if (fundings && fundings.length > 0) { %>
    <table>
        <thead>
        <tr>
            <th>Funding ID</th>
            <th>Name</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% fundings.forEach(funding => { %>
            <tr>
                <td><%= funding.fid %></td>
                <td><%= funding.fname %></td>
                <td><%= funding.created_at %></td>
                <td><%= funding.updated_at %></td>
                <td>
                    <a href="/api/fundings/edit/<%= funding.fid %>">Edit</a>
                    <form action="/api/fundings/delete/<%= funding.fid %>" method="POST" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        <% }); %>
        </tbody>
    </table>
<% } else { %>
    <p>No funding data available.</p>
<% } %>
</body>
