<body> 
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
<h1>Schools Dashboard</h1>
<% if (typeof error !== 'undefined') { %>
    <p style="color: red;"><%= error %></p>
<% } %>
<% if (schools && schools.length > 0) { %>
    <table>
        <thead>
        <tr>
            <th>School ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip Code</th>
            <th>Phone Number</th>
        </tr>
        </thead>
        <tbody>
        <% schools.forEach(school => { %>
            <tr>
                <td><%= school['School ID'] %></td>
                <td><%= school.Name %></td>
                <td><%= school.Address %></td>
                <td><%= school.City %></td>
                <td><%= school.State %></td>
                <td><%= school['Zip Code'] %></td>
                <td><%= school['Phone Number'] %></td>
            </tr>
        <% }); %>
        </tbody>
    </table>
<% } else { %>
    <p>No schools data available.</p>
<% } %>